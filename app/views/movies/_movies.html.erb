<div class="album py-5 bg-light">
  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% movies.each do |movie|  %>
      <div class="col">
        <div class="card shadow-sm">

          <div class="card-body">
            <h1 class="fw-light"> <%= movie.name %></h1>

            <%
=begin%>
 <p class="card-text">
              <strong>Ratings:</strong> <%=movie.average_stars %>
            </p>
<%
=end%>



            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted"> <%=time_ago_in_words(movie.created_at) %></small>
            </div>
          </div>
        </div>
      </div>

    <% end %>
    </div>
  </div>
</div>

